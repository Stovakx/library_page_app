<div class="row ">
    <div class="col-12 ">
        <div class="row form-group pt-2">
            <div class="col-12 d-flex justify-content-center">
                <input class="form-input" type="text" name="user"  placeholder="User" style="width: 14.789375rem;"><%= comment.user %>
            </div>    
        </div>
        <div class="row form-group pt-2">
            <div class="col-12 d-flex justify-content-center">
                <span class="pr-2">Rating:</span>
                <div class=" mr-1">
                    <label class="form-check-label" for="rating">1</label>
                    <input class="form-check-input" type="radio" name="rating" id="" value="1">

                </div>
                <div class=" mr-1">
                    <label class="form-check-label" for="rating">2</label>
                    <input class="form-check-input" type="radio" name="rating" id="" value="2">
                    
                </div>
                <div class=" mr-1">
                    <label class="form-check-label" for="rating">3</label>
                    <input class="form-check-input" type="radio" name="rating" id="" value="3">
                    
                </div>
                <div class=" mr-1">
                    <label class="form-check-label" for="rating">4</label>
                    <input class="form-check-input" type="radio" name="rating" id="" value="4">
                    
                </div>
                <div class="mr-1">
                    <label class="form-check-label" for="rating">5</label>
                    <input class="form-check-input" type="radio" name="rating" id="" value="5">
                    
                </div>
            </div>
        </div>
        <div class="row form-group pt-2">
            <div class="col-12 d-flex justify-content-center" >
                <textarea name="text" value="" id="" placeholder="Comment" style="width: 14.789375rem;"><%= comment.text %></textarea>
            </div>
        </div>
    </div>
</div>