<section class="mt-4 searchBooks">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="col col-12">
                    <h1 class="text-center">Our library</h1>
                </div>
                <div class="col col-12">
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <form action="" method="get">
                    <%- include('_search_fields') %>
                </form>
            </div>
        </div>
    </div>
</section>
<section class="sectionBookCards">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <% books.forEach(book => { %>
                <div class="card m-2" style="width: 18rem;">
                    <img src="<%= book.coverImagePath %>" class="card-img-top p-0" alt="...">
                    <div class="card-body">
                    <h5 class="card-title"><%= book.title %></h5>
                    <!-- need to show author.name no id. -->
                    <p class="card-text"><%= book.author.name %></p>
                    <p class="card-text"><%= book.description %></p>
                    <div class="col-12 d-flex justify-content-center mt-2 px-0">
                        <a href="/books/<%= book.id %>"class="btn " id="viewAuthor">Info</a> 
                        <a href="/books/<%= book.id %>/edit" class="btn btn-warning mx-3" id="editAuthor">Edit</a> 
                        <%- include('../partials/deleteForm', { url: `/books/${book.id}`}) %>
                    </div>
                    </div>
                </div>    
            <% }) %>
        </div>
    </div>
</section>
