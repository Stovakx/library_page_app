<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 mt-4 ">
                <h2 class="text-center">Edit <%= book.title %></h2>
                <form action="/books/<%= book.title %> ?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col">
                            <%- include('_edit_book.ejs') %>
                            <div class="col d-flex justify-content-end mt-2">
                                <a href="/authors" class="btn btn-danger ms-2">Cancel</a>
                                <button type="submit" class="btn btn-success mr-3">Edit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
